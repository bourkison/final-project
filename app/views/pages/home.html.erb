<h1>Ubog</h1>


<div id="map"></div>
<script>
  var addr;
  function initMap() {
    addr = {
      lat: -33.8688,
      lng: 151.2093
    };

    // Create a map object and specify the DOM element for display.
    var map = new google.maps.Map(document.getElementById('map'), {
      center: addr,
      zoom: 15
    });


    <% if @current_user.present? %>
      addr.lat = <%= @current_user.latitude %>;
      addr.lng = <%= @current_user.longtitude %>;
      map.setCenter(addr);

      var homeMarker = new google.maps.Marker({
        position: addr,
        map: map,
        title: 'Home'
      });
    <% end %>
  }

</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD5KHIJxL3ajTIsVlQjkfLZUQ6A0yflsdY&callback=initMap" async defer></script>
